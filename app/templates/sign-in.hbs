<div class="col-xs-3 col-sm-offset-3">
     <h1>Sign In</h1>
     {{#if errorMessage}}
          <div class="alert alert-danger" role="alert">
               Error! Wrong username/password combination.
          </div>
     {{/if}}
     <div>
          <div class="form-group">
               <label>Email:</label>
               {{input type="email" value=emailaddress class="form-control" placeholder="Please type your email."}}
          </div>
          <div class="form-group">
               <label>Password:</label>
               {{input type="password" value=password class="form-control" placeholder="Please type your password."}}
          </div>
          <button class="btn btn-md btn-success" {{action 'signIn' 'password'}} disabled={{isDisabled}}>Login</button>
     </div>
     <h1>{{errorMessage}}</h1>
</div>
