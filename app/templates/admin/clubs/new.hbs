<thead>
     <tr> {{!--The title row is above a blank row with input cells for each field --}}
          <td>Name</td>
          <td>Website</td>
          <td>Logo</td>
          <td>Actions</td>
     </tr>

     <tr>
                    <td class="input-group-sm">{{input value=name class='form-control' placeholder="Name."}}</td>
                    <td class="input-group-sm">{{input value=website class='form-control' placeholder="Website URL."}}</td>
                    <td class="input-group-sm">{{input value=logo class='form-control' placeholder="Logo URL." }}</td>
                    {{!--The 'save' button is only available if all fields are vaild, and both buttons are rendered in the same cell to help with spacing of the rows--}}
                    <td><button class="btn btn-success btn-xs" disabled={{isDisabled}} {{action 'createClub'}}>Save</button>
                    <button class="btn btn-danger btn-xs" {{action 'cancelCreate' club}}>Cancel</button></td>
     </tr>
</thead>
